= simple_form_for @user, html: {class: "form-horizontal"} do |f|
  = f.input :email
  = f.input :password
  = f.input :password_confirmation

  = f.fields_for :profile do |p|
    = p.input :first_name
    = p.input :last_name
    = p.input :address

  = f.submit "sign up", class: "btn btn-default"


